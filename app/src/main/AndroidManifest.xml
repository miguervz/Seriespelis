<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.studium.listas">

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/star_big_on"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/star_big_on"
        android:supportsRtl="true"
        android:theme="@style/Theme.Listas">
        <activity android:name=".ui.series.portadaSerie"></activity>
        <activity android:name=".ui.peliculas.portadaPeliculas" />
        <activity android:name=".ui.series.informacionSeries" />
        <activity android:name=".ui.peliculas.informacionPeliculas" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Listas.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>